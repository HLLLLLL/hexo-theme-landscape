#ukagaka_controlpanel 
  font-size 1.1em
  position fixed
  right 0px
  bottom 0px
  width 50%
  font-family 'Comic Sans MS', font-default
  img    
    color color-blue
    width 24px
    height 24px
    display inline-block
    &:hover
      opacity 0.4
      transition color .5s
  span
    float right
    width 5%
    color color-font
    font-size font-size
    margin 0.1em
    &:hover:before
      color color-blue
    &[title="menu"]::before, &[title="gotop"]::before
      font-family font-icon-family
      font-smoothing()
    &[title="menu"]::before
      content "\f03a"
    &[title="gotop"]::before
      content "\f062"  

#ukagaka_menu_list
  span
    color color-font
    font-size font-size
    margin 0.1em
    &:hover:before
      color color-blue
    &[title="godown"]::before,&[title="music"]::before,&[title="mail"]::before,&[title="power"]::before,&[title="learn"]::before
      font-family font-icon-family
      font-smoothing() 
    &[title="godown"]::before
      content "\f063"
    &[title="music"]::before
      content "\f001"
    &[title="mail"]::before
      content "\f003"
    &[title="power"]::before
      content "\f011"
    &[title="learn"]::before
      content "\f044"

#ukagaka_panel 
  width 40%
  position fixed
  right 0px
  bottom 30px
  span 
  	cursor pointer
  	height 0px  

.ukagaka_box, .ukagaka_toc
  position absolute
  bottom 100px
  right 100px
  font-size 100%
  background color-theme
  color color-font
  width 50%

.ukagaka_msg
  padding 0.5em
  color color-font
  font-family 'Comic Sans MS', font-serif
  &::before
    font-smoothing()
    padding-right 0.5em    
  span#ukagaka_menu_btn_addstring, span#ukagaka_menu_btn_renewlist, 
  span#ukagaka_menu_btn_exit, span#ukagaka_btn_menu, span#ukagaka_addmenu_add
    margin 0.1em
    display inline
    &:hover
        color color-blue
    &::before
        font-smoothing()
        padding-right 0.5em
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline

.ukagaka_img 
  width 15%
  position fixed
  right 0px
  bottom 0px 

#ukagaka_stringinput 
  >input
    width 95%

input
  &::-moz-placeholder 
    color color-font
  &::-webkit-input-placeholder
    color color-font

.ukagaka_box
  position absolute
  right 0px
  bottom 130px
  border 5px solid #c81e2b
  text-align center
  color #333
  -webkit-border-top-left-radius 140px / 40px
  -webkit-border-top-right-radius 140px / 40px
  -webkit-border-bottom-right-radius 140px / 40px
  -webkit-border-bottom-left-radius 140px / 40px
  -moz-border-radius 140px / 40px
  border-radius 140px / 40px
  &:before
    content ""
    position absolute
    z-index 10
    bottom -20px
    right 100px
    width 20px
    height 20px
    border 5px solid #c81e2b
    -webkit-border-radius 50px
    -moz-border-radius 50px
    border-radius 50px
    display block
    background color-theme
  &:after
    content ""
    position absolute
    z-index 10
    bottom -40px
    right 50px
    width 25px
    height 25px
    border 5px solid #c81e2b
    -webkit-border-radius 25px
    -moz-border-radius 25px
    border-radius 25px
    display block
    background color-theme





